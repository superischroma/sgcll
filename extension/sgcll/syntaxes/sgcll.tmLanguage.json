{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "sgcll",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"begin": "//",
					"beginCaptures": {
						"0": {
							"name": "comment.line.double-slash"
						}
					},
					"end": "\\n",
					"name": "comment.line.double-slash.sgcll"
				},
				{
					"begin": "/\\*",
					"beginCaptures": {
						"0": {
							"name": "comment.block.slash-asterisk"
						}
					},
					"end": "\\*/",
					"name": "comment.block.sgcll"
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.sgcll",
				"match": "\\b(import|return|if|else|elif|repeat|for|while|delete|make|enter)\\b"
			},
			{
				"name": "constant.language.sgcll",
				"match": "\\b(public|private|protected|unsigned|let|void|bool|i8|i16|i32|i64|f32|f64|lowlvl|string|blueprint|constructor|destructor|this|operator|requirement|follows|true|false|null|nil)\\b"
			}]
		},
		"strings": {
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\"
				},
				{
					"name": "string.quoted.double.sgcll",
					"begin": "\"",
					"end": "\""
				},
				{
					"name": "string.quoted.single.sgcll",
					"begin": "'",
					"end": "'"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.numeric.sgcll",
					"match": "\\b0x[a-fA-F0-9]+L*l*|0b[0-1]+L*l*|0o[a-fA-F0-9]+L*l*|[0-9]+\\.[0-9]+D*F*d*f*|[0-9]+D*F*d*f*L*l*\\b"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "entity.name.function.sgcll",
					"match": "\\w+(?=\\()"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.sgcll",
					"match": "\\w+"
				}
			]
		}
	},
	"scopeName": "source.sgcll"
}